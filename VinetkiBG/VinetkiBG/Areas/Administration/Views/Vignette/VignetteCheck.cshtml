@model VinetkiBG.Models.BidingModels.VignetteCheckInputModel


@{
    ViewData["Title"] = "VignetteCheck";
}

<h1 class="text-center mt-4">Check validity for e-Vignette</h1>
<div class="d-flex justify-content-center mt-5">
    <form method="post" class="form-inline">
        <div class="form-group mb-2 font-weight-bold d-flex flex-column">
            <label asp-for="@Model.Country" class="control-label"></label>
            <input asp-for="@Model.Country" type="text" class="form-control">
        </div>
        <div class="form-group mx-sm-3 mb-2 font-weight-bold d-flex flex-column">
            <label asp-for="@Model.PlateNumber">License Plate</label>
            <input asp-for="@Model.PlateNumber" type="text" class="form-control">
        </div>
        <div class="d-flex flex-column">
            <label>   </label>
            <button type="submit" class="btn btn-outline-primary mt-3 font-weight-bold">Check</button>
        </div>
    </form>
</div>