@model VinetkiBG.Models.BidingModels.ViolationRegisterBindingModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "NotFoundVignette";
    var vehicleId = ViewData["vehicleId"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mt-3 text-danger">
    No electronic vignette for this vehicle was found !!!
</h2>
<hr class="mt-3" />
<h1 class="text-center mt-3 font-weight-bold">Register Violation</h1>

<form method="post" class="w-50 mx-auto">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <hr class="mt-3" />
    <div class="d-flex justify-content-between">

        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="@Model.ViolationType" class="font-weight-bold"></label>
            </div>
            <select asp-for="@Model.ViolationType" class="form-control">
                <option selected>Select Type</option>
                <option value="Compesatory Charge">Compensatory Charge</option>
                <option value="Fine">Fine</option>
            </select>
            <span asp-validation-for="@Model.ViolationType" class="text-danger"></span>
        </div>
        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="@Model.Road" class="font-weight-bold"></label>
            </div>
            <input asp-for="@Model.Road" class="form-control" type="text" placeholder="Road" />
            <input asp-for="@Model.VehicleId" type="hidden" value=@vehicleId />
            <span asp-validation-for="@Model.Road" class="text-danger"></span>
        </div>
    </div>
    <hr class="mt-3" />
    <div class="d-flex justify-content-between">
        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="@Model.ViolationDate" class="font-weight-bold"></label>
            </div>
            <input asp-for="@Model.ViolationDate" class="form-control" type="datetime-local" placeholder="Violation Date" />
            <span asp-validation-for="@Model.ViolationDate" class="text-danger"></span>
        </div>
        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="@Model.PenaltyAmount" class="font-weight-bold"></label>
            </div>
            <input asp-for="@Model.PenaltyAmount" class="form-control" type="number" placeholder="Penalty Amount" />
            <span asp-validation-for="@Model.PenaltyAmount" class="text-danger"></span>
        </div>
    </div>
    <hr class="mt-3" />
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary  font-weight-bold">Register Violation</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}