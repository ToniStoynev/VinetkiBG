@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<h1 class="text-center mt-3">Register</h1>

<form method="post" class="mx-auto w-50">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <hr class=" mt-3 bg-eventures hr2" />
    <div class="d-flex justify-content-between">
        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="Input.Username" class="font-weight-bold"></label>
            </div>
            <input asp-for="Input.Username" class="form-control" type="text" placeholder="Username" />
            <span asp-validation-for="Input.Username" class="text-danger"></span>
        </div>
        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="Input.Email" class="font-weight-bold"></label>
            </div>
            <input asp-for="Input.Email" class="form-control" type="email" placeholder="Email" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="Input.FirstName" class="font-weight-bold"></label>
            </div>
            <input asp-for="Input.FirstName" class="form-control" type="text" placeholder="First name" />
            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
        </div>
        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="Input.LastName" class="font-weight-bold"></label>
            </div>
            <input asp-for="Input.LastName" class="form-control" type="text" placeholder="Last name" />
            <span asp-validation-for="Input.LastName" class="text-danger"></span>
        </div>
    </div>

    <hr class=" mt-3 bg-eventures hr2" />

    <div class="d-flex justify-content-between">
        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="Input.Password" class="font-weight-bold"></label>
            </div>
            <input asp-for="Input.Password" class="form-control" type="password" placeholder="Password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label asp-for="Input.ConfirmPassword" class="font-weight-bold"></label>
            </div>
            <input asp-for="Input.ConfirmPassword" class="form-control" type="password" placeholder="Confrim password" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="d-flex my-3 justify-content-between">
        <button type="submit" class="btn btn-outline-primary font-weight-bold mx-auto">Register</button>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
