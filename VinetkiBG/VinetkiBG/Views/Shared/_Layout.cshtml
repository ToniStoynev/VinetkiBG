<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VinetkiBG</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/jquery-datetimepicker/jquery.datetimepicker.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/jquery/jquery.min.js"></script>
    <script src="~/js/jquery-datetimepicker/jquery.datetimepicker.full.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light  bg-primary text-light font-weight-bold">
            <a class="navbar-brand text-light" href="#">VinetkiBG</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-flex justify-content-between" id="navbarSupportedContent">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link text-light" href="/Home/Index">Home </a>
                    </li>
                </ul>
                <ul class="navbar-nav text-light">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item active">
                            <a class="nav-link text-light" href="/Identity/Account/Login">Login</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link text-light" href="/Identity/Account/Register">Register</a>
                        </li>
                    }
                    else if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <li class="nav-item active text-left">
                            <a class="nav-link text-light" href="/Home/Profile">My Profile</a>
                        </li>
                        <li class="nav-item active text-left">
                            <a class="nav-link text-light" href="/Administration/Vignette/VignetteCheck">
                                e-Vignette Check
                            </a>
                        </li>
                        <li class="nav-item active text-left">
                            <a class="nav-link text-light" href="/Vehicles/Add">Add Vehicle</a>
                        </li>
                        <li class="nav-item active text-left">
                            <a class="nav-link text-light" href="/Vehicles/All/">All vehicles</a>
                        </li>
                        <li class="nav-item active text-left">
                            <a class="nav-link text-light" href="/Identity/Account/Logout">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item active text-left">
                            <a class="nav-link text-light" href="/Home/Profile">My Profile</a>
                        </li>
                        <li class="nav-item active text-left">
                            <a class="nav-link text-light" href="/Vehicles/Add">Add Vehicle</a>
                        </li>
                        <li class="nav-item active text-left">
                            <a class="nav-link text-light" href="/Vehicles/All/">All vehicles</a>
                        </li>
                        <li class="nav-item active text-left">
                            <a class="nav-link text-light" href="/CreditCard/Details/">Credit Cards</a>
                        </li>
                        <li class="nav-item active text-left">
                            <a class="nav-link text-light" href="/Identity/Account/Logout">Logout</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>
        <main role="main" class="mt-3">
            @RenderBody()
        </main>
    <footer class="border-top footer bg-primary font-weight-bold text-muted">
        <div class="container text-light text-center">
            &copy; 2019 - VinetkiBG - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
