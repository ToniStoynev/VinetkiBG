@model VinetkiBG.Models.BidingModels.PurchaseVignetteBidingModel
@{
    ViewData["Title"] = "Purchase";
    var id = ViewData["CarId"];
}

<h1 class="text-center mt-4">Purchase vignnete</h1>
<form method="post" class="w-50 mx-auto">

        <div class="form-group mt-4 text-center">
            <label asp-for="@Model.Category" class="font-weight-bold"></label>
            <select asp-for="@Model.Category" class="form-control">
                <option selected>Select Vignette</option>
                <option value="Weekend">Weekend</option>
                <option value="Weekly">Weekly</option>
                <option value="Monthly">Monthly</option>
                <option value="Yearly">Yearly</option>
            </select>
            <span asp-validation-for="@Model.Category" class="text-danger"></span>
        </div>

        <div class="form-grop mt-4 text-center">

            <label asp-for="@Model.StartDate" class="font-weight-bold"></label>
            <input asp-for="@Model.StartDate" class="form-control " type="datetime-local" />
            <input asp-for="@Model.VehicleId" type="hidden" value=@id />
            <span asp-validation-for="@Model.StartDate" class="text-danger"></span>
        </div>

    <div class="form-group mt-4 text-center">
        <button type="submit" class="btn btn-primary  font-weight-bold">Buy Vignette</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
