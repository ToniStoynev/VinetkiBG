@model VinetkiBG.Models.ViewModels.VehicleViewAllModel
@{
    ViewData["Title"] = "Purchase";
}
<h1 class="text-center mt-4">Purchase vignnete</h1>

<div class="d-flex justify-content-center">
    <form action="/" method="post">
        <table class="table table-striped w-75 mt-5">
            <thead>
                <tr>
                    <th scope="col">Friendly Name</th>
                    <th scope="col">Details</th>
                    <th scope="col">Vignette</th>
                    <th scope="col">Start Date</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">@Model.Brand</th>
                    <td>@Model.LicencePlate</td>
                    <td>
                        <select class="form-control" id="inlineFormCustomSelect">
                            <option selected>Select Vignnete</option>
                            <option value="Weekend">Weekend</option>
                            <option value="Weekly">Weekly</option>
                            <option value="Monthly">Monthly</option>
                            <option value="Yearly">Yearly</option>
                        </select>
                    </td>
                    <td><input type="date" /></td>
                </tr>
            </tbody>
        </table>
</div>
<div class="d-flex justify-content-center mt-5">
    <a href="/CreditCard/Details" class="btn btn-primary font-weight-bold w-25">Buy Vignnete</a>
</div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
