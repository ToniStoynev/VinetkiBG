
@{
    ViewData["Title"] = "NotFoundVignette";
}


<h2 class="text-center mt-3 text-danger">
    Sorry Admin, but no electronic vignette was found.
    Please, try again.
</h2>
<hr class="mt-3 bg-eventures hr-2" />
<h1 class="text-center mt-3">Register Violation</h1>
<form method="post" class="w-50 mx-auto">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="d-flex justify-content-between">
        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label  class="font-weight-bold"></label>
            </div>
            <input  class="form-control" type="text" placeholder="Name..." />
            <span  class="text-danger"></span>
        </div>
        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <labelclass="font-weight-bold"></label>
            </div>
            <input  class="form-control" type="text" placeholder="Place..." />
            <span  class="text-danger"></span>
        </div>
    </div>
    <hr class="mt-3 bg-eventures hr-2" />
    <div class="d-flex justify-content-between">
        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label  class="font-weight-bold"></label>
            </div>
            <input  class="form-control" type="datetime-local" placeholder="Start..." />
            <span  class="text-danger"></span>
        </div>
        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label  class="font-weight-bold"></label>
            </div>
            <input  class="form-control" type="datetime-local" placeholder="End..." />
            <span  class="text-danger"></span>
        </div>
    </div>
    <hr class="mt-3 bg-eventures hr-2" />
    <div class="d-flex justify-content-between">
        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label  class="font-weight-bold"></label>
            </div>
            <input  class="form-control" type="number" placeholder="Total Tickets..." />
            <span  class="text-danger"></span>
        </div>
        <div class="form-group w-45">
            <div class="d-flex justify-content-center">
                <label  class="font-weight-bold"></label>
            </div>
            <input  class="form-control" type="number" step="any" placeholder="Price Per Ticket..." />
            <span class="text-danger"></span>
        </div>
    </div>
    <hr class="mt-3 bg-eventures hr-2" />
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn bg-eventures">Register Violation</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}