@model  VinetkiBG.Models.ViewModels.CreditCardDetailsViewModel
@{
    ViewData["Title"] = "PayPenalty";
    var id = ViewData["ViolationID"];
}

    <div class="container justify-content-center">
        <h3 class="text-center">Card Details</h3>
        <table class="table table-hover table-striped text-center">
            <thead>
                <tr class="row">
                    <th scope="col" class="col-lg-4">Bank Name</th>
                    <th scope="col" class="col-lg-4">IBAN</th>
                    <th scope="col" class="col-lg-4">Total Amount</th>
                </tr>
            </thead>
            <tbody>
                <tr class="row">
                    <td class="col-lg-4">@Model.BankName</td>
                    <td class="col-lg-4">@Model.IBAN</td>
                    <td class="col-lg-4">@Model.TotalAmount</td>
                </tr>
            </tbody>
        </table>
        <div class="button-holder text-center">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                Pay Penalthy
            </button>
        </div>
    </div>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="exampleModalLabel">Penalty Payment</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="order-form" action="/Product/Order" method="post">
                        <div class="form-group">
                            <input type="hidden" value="@id" name="violationId" />
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id="confirm-payment-button">Confirm Payment</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        $('#confirm-payment-button').click(function () {
            $('#order-form').submit();
    });
    </script>