@model VinetkiBG.Models.BidingModels.AddVechileBidingModel
@{
    ViewData["Title"] = "Add";
}


<h1 class="text-center mt-4">Add vehicle</h1>
<div class="row">
    <div class="mx-auto text-center">
        <section>
            <form  method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group font-weight-bold">
                    <label asp-for="@Model.Brand"></label>
                    <input asp-for="@Model.Brand" class="form-control" />
                    <span asp-validation-for="@Model.Brand" class="text-danger"></span>
                </div>
                <div class="form-group font-weight-bold">
                    <label asp-for="@Model.Type"></label>
                    <select asp-for="@Model.Type" class="form-control" id="inlineFormCustomSelect">
                        <option selected>Select Type</option>
                        <option value="Heavy Goods Vehicle">Heavy Goods Vehicle</option>
                        <option value="Bus">Bus</option>
                        <option value="Light Vehicle">Light Vehicle</option>
                        <option value="Traler / Caravan">Traler / Caravan</option>
                    </select>
                    <span asp-validation-for="@Model.Type" class="text-danger"></span>
                </div>
                <div class="form-group font-weight-bold">
                    <label asp-for="@Model.Country"></label>
                    <input asp-for="@Model.Country" class="form-control" />
                    <span asp-validation-for="@Model.Country" class="text-danger"></span>
                </div>
                <div class="form-group font-weight-bold">
                    <label asp-for="@Model.PlateNumber"></label>
                    <input asp-for="@Model.PlateNumber" class="form-control" />
                    <span asp-validation-for="@Model.PlateNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-outline-primary font-weight-bold">Add</button>
                </div>

            </form>
        </section>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


